<!DOCTYPE html>
<html>
 <head>
 <style type="text/css">
 .red {
 fill: red;
 }
 .blue {
 fill: blue;
 }
 .lineChart {
 stroke: red;
 stroke-width: 3px;
 fill: none;
 }
 .axis path,
 .axis line {
   fill: none;
   stroke: black;
   shape-rendering: crispEdges;
 }
 
 .axis text{
  font-family: sans-serif;
  font-size: 11px;
}
 
 </style>
 <script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>

 <script type="text/javascript">
 var padding ="50";
 

 var data2;
 d3.csv("./data.csv", function(error, data) {
 //d3.select("body").selectAll("p").data(data).enter().append('p').text(function(d) { return d['x'];});
 //var dataTarget = svg.selectAll("g").append("g");
 data2 = data;
 var svg2 = d3.select("body").append("svg").attr("width", 400).attr("height", 400);

 var x = d3.scale.linear().domain([0,60]).range([padding,350]);
 var y2 = d3.scale.linear().domain([0,25]).range([padding,350]);
 var y = d3.scale.linear().domain([0,25]).range([350,padding]);

 var theLine = d3.svg.line()
 .x(function (d, i) {
 //console.log(JSON.stringify(d));
 return x(i*15);
 })
 .y(function (d) {
 return y(d['y']);
 });

 svg2.append("path") 
 .attr("class", "lineChart")
 .attr("d", theLine(data));


 var xAxis =d3.svg.axis();
 xAxis.scale(x);
 xAxis.orient("bottom").ticks(5);
 svg2.append("g").attr("class","axis").attr("transform","translate(0,"+(400-padding)+")").call(xAxis);

 var yAxis =d3.svg.axis();
 yAxis.scale(y);
 yAxis.orient("left").ticks(5);
 svg2.append("g").attr("class","axis").attr("transform","translate("+padding+",0)").call(yAxis);
 

 });
 

 d3.csv("./data.csv", function(errol, data) {
 var x = d3.scale.linear().domain([0,25]).range([padding,350]);
 var y = d3.scale.linear().domain([0,25]).range([350,padding]);
 var z = d3.scale.linear().domain([0,25]).range([2,15]);
 
 //d3.select("body").selectAll("p").data(data).enter().append('p').text(function(d) { return d['x'];});
 //var dataTarget = svg.selectAll("g").append("g");
 var svg = d3.select("body").append("svg").attr("width", 400).attr("height", 400);

 svg.selectAll("circle")
 .data(data) 
 .enter()
 .append("circle")
 .attr("cx", function(d) { return x(d['x']); })
 .attr("cy", function(d) { return y(d['y']) })
 .attr("r", function(d) { return z(d['z']) });



 var xAxis =d3.svg.axis();
 xAxis.scale(x);
 xAxis.orient("bottom").ticks(5);
 svg.append("g").attr("class","axis").attr("transform","translate(0,"+(400-padding)+")").call(xAxis);

 var yAxis =d3.svg.axis();
 yAxis.scale(y);
 yAxis.orient("left").ticks(5);
 svg.append("g").attr("class","axis").attr("transform","translate("+padding+",0)").call(yAxis);


 });

 d3.csv("./data2.csv", function(errol, data) {
 //d3.select("body").selectAll("p").data(data).enter().append('p').text(function(d) { return d['x'];});
 //var dataTarget = svg.selectAll("g").append("g");

 var svg1 = d3.select("body").append("svg").attr("width", 400).attr("height", 400);

 var x = d3.scale.linear().domain([0,10]).range([padding,350]);
 var y = d3.scale.linear().domain([0,25]).range([padding,350]);
 var y2 = d3.scale.linear().domain([0,25]).range([350,padding]);



 svg1.selectAll("rect")
 .data(data)
 .enter()
 .append("rect")
 .attr("x", function(d, i) { return i * 15 + parseInt(padding); } )
 .attr("y", function(d, i) {return parseInt(y2(d['x'])) - parseInt(padding); } )
 .attr("width", function(d, i) { return 10;} )
 .attr("height", function(d, i) { return y(d['x']); } )
 .attr("class", function(d, i) { if(parseInt(d['c']) >= 5) {return "red"; } else {return "blue";} } );


 var xAxis =d3.svg.axis();
 xAxis.scale(x);
 xAxis.orient("bottom").ticks(5);
 svg1.append("g").attr("class","axis").attr("transform","translate(0,"+(400-padding)+")").call(xAxis);

 var yAxis =d3.svg.axis();
 yAxis.scale(y);
 yAxis.orient("left").ticks(5);
 svg1.append("g").attr("class","axis").attr("transform","translate("+padding+",0)").call(yAxis);

 });



 </script>
 </head>

<body>

</body>
</html>
